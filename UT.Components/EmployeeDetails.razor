@* @rendermode InteractiveServerRenderMode *@

@if (Employee == null)
{
    <p>Loading...</p>
}
else
{
    <section class="employee-detail">
        <h1 class="page-title">
            Details for @Employee?.FirstName @Employee?.LastName
        </h1>
        <br>
        <div class="col-12 row">
            <div class="col-2 text-center">
                <div class="mt-2">
                    <button type="button" @onclick="@ChangeHolidayState" class="btn btn-outline-primary me-1">
                        Change Holiday state
                    </button>
                </div>
            </div>
            <div class="col-10 row">
                <div class="col-12 col-xxl-8">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Employee ID</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.EmployeeId</label>
                            <button type="button" @onclick="@ChangeHolidayState" class="btn btn-outline-primary me-1">
                                Change Holiday state
                            </button>

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">First Name</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.FirstName</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Last Name</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.LastName</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Email</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Phone Number</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.PhoneNumber</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Address</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Address</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">City</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.City</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">State</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.State</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Zip</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Zip</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Country</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Country</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Martial Status</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.MartialStatus</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Job Category</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.JobCategory</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Gender</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Gender</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Birth Date</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.BirthDate</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Joined Date</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.JoinedDate</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Exit Date</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.ExitDate</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Latitude</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Latitude</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Longitude</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Longitude</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Comment</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Comment</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Image Name</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.ImageName</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Smoker</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.Smoker</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">IsOnHoliday</label>
                        <div class="col-sm-8">
                            <label type="text" class="form-control-plaintext">@Employee?.IsOnHoliday</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}